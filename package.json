{
    "name": "@donmahallem/trapeze-api-express-route",
    "version": "1.8.5",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": false,
    "scripts": {
        "test": "mocha",
        "start": "npm run build:live",
        "build:live": "nodemon",
        "build": "tsc",
        "build:doc": "node ./node_modules/typedoc/bin/typedoc --out ./tt2/ --mode modules --exclude /**/index ./src/",
        "test-ci": "nyc npm run test",
        "lint": "tslint -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "lint-fix": "tslint --fix -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "docs": "typedoc --options typedoc.json",
        "api-docs": "apidoc -i ./src/ -o ./docs/api/",
        "test:lint": "npm run lint",
        "test:build": "npm run build",
        "test:unit": "npm run test-ci",
        "test:docs": "npm run docs",
        "test:api-docs": "npm run api-docs"
    },
    "dependencies": {
        "@donmahallem/trapeze-api-client": "~2.4.9",
        "express": "~4.17.1",
        "jsonschema": "~1.2.5",
        "request": "~2.88.0",
        "request-promise-native": "~1.0.8"
    },
    "devDependencies": {
        "@types/chai": "~4.2.7",
        "@types/mocha": "~5.2.7",
        "@types/node": "~13.1.8",
        "@types/request": "~2.48.4",
        "@types/request-promise-native": "~1.0.17",
        "@types/sinon": "~7.5.1",
        "apidoc": "~0.20.0",
        "chai": "~4.2.0",
        "mocha": "~7.0.0",
        "nodemon": "~2.0.2",
        "nyc": "~15.0.0",
        "sinon": "~8.1.1",
        "supertest": "~4.0.2",
        "ts-node": "~8.6.2",
        "tslint": "~5.20.1",
        "typedoc": "~0.16.8",
        "typescript": "~3.7.5"
    },
    "peerDependencies": {
        "@donmahallem/trapeze-api-types": ">=1.2.0 <2.0.0"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "homepage": "https://donmahallem.github.io/TrapezeApiExpressRoute/",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/donmahallem/TrapezeApiExpressRoute/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/donmahallem/TrapezeApiExpressRoute.git"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "strict": true,
        "esModuleInterop": true
    }
}
